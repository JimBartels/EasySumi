<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="8dp"
                />
            <gradient
                android:angle="45"
                android:centerX="53%"
                android:centerColor="#4FAE54"
                android:startColor="#22A8A9"
                android:endColor="#ECB852"
                android:type="linear"
                />
            <size
                android:width="30dp"
                android:height="30dp"
                />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners
                android:radius="8dp"
                />
            <solid android:color="#BABABA" />
        </shape>
    </item>
</layer-list>